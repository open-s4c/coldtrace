#!/usr/bin/env bash
COLDTRACE_BUILD="$(readlink -f $(dirname $(readlink -f $0))/../build)"
PRELOAD="$COLDTRACE_BUILD/src/libcoldtrace.so"
export BINGO_PREFIX="$COLDTRACE_BUILD/deps/bingo"
BINGO_SCRIPTS="$COLDTRACE_BUILD/../deps/bingo/scripts"

exec $BINGO_SCRIPTS/tsano env LD_PRELOAD="$PRELOAD" "$@"
